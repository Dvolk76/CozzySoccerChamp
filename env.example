# Server Configuration
PORT=3000
SESSION_SECRET=your_session_secret_here
CORS_ORIGIN=http://localhost:5173,https://your-domain.pages.dev

# Database (PostgreSQL for local development, D1 for production)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cozy_soccer_champ?schema=public

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TG_INIT_BYPASS=1

# Football Data API
FOOTBALL_DATA_API_TOKEN=your_football_data_org_token_here

# Environment
NODE_ENV=development
LOG_LEVEL=info

# Cloudflare Workers/D1 (production only)
# These are set via wrangler secrets:
# wrangler secret put SESSION_SECRET
# wrangler secret put TELEGRAM_BOT_TOKEN  
# wrangler secret put FOOTBALL_API_TOKEN


